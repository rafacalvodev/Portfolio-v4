<footer id="footer" class="site-footer">
  <div class="wrapper">
    <div class="site-footer__inner flow">
      <div class="social-nav flow">
        <p>{{ languages[page.lang].socialText }}</p>
        <nav class="social-nav__menu">
          <ul class="social-nav__list" role="list">
            <li>
              <a href="#">
                <span class="sr-only">Github</span>
                <div>
                  {% include "svg/github-line.svg" %}
                </div>
              </a>
            </li>
            <li>
              <a href="#">
                <span class="sr-only">Twitter</span>
                <div>
                  {% include "svg/twitter-line.svg" %}
                </div>
              </a>
            </li>
            <li>
              <a href="#">
                <span class="sr-only">Instagram</span>
                <div>
                  {% include "svg/linkedin-box-line.svg" %}
                </div>
              </a>
            </li>
            <li>
              <a href="#">
                <span class="sr-only">Codepen</span>
                <div>
                  {% include "svg/codepen-line.svg" %}
                </div>
              </a>
            </li>
          </ul>
        </nav>
      </div>
      <div class="site-footer__navbar">
        <nav id="footernav"  class="[ navbar ]" aria-label="{{ meta[page.lang].ariaLabels.mainMenu }}">
          <ul  class="[ nav-list ]" role="list">
            {% for item in navigation[page.lang].top %}
            <li>
              <a
                href="{{ item.url }}"
                {{
                helpers.getLinkActiveState(item.url,
                page.url)
                |
                safe
                }}
                >{{ item.text }}</a
              >
            </li>
            {% endfor %}
          </ul>
        </nav>
      </div>
      <div class="site-footer__copy">
        <p class="site-author">
          &copy; {% year %}  <a class="name-link" rel="me" href="/{{ page.lang }}/">
        Rafael Calvo</a>
      </p>
      </div>
    </div>
    <!-- <div class="lang-select" aria-label="{{ languages[page.lang].ariaLang }}">
      {% for link in page.url | locale_links %} {%- if not loop.first %}/{% endif %}
      {{ languages[page.lang].availableText }}
      <a href="{{ link.url }}" lang="{{ link.lang }}" hreflang="{{ link.lang }}">{{
        link.label
      }}</a>
      {% endfor %}
    </div> -->
  </div>
</footer>

